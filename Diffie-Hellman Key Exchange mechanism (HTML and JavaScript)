 <body>
 <h2>Diffie-Hellman Key Exchange</h2>
 <label for="p">Enter prime number (p):</label>
 <input type="number" id="p" value="47"><br><br>
 <label for="g">Enter primitive root (g):</label>
 <input type="number" id="g" value="71"><br><br>
 <label for="xa">Enter Alice's private key (Xa):</label>
 <input type="number" id="xa" value="9"><br><br>
 <label for="xb">Enter Bob's private key (Xb):</label>
 <input type="number" id="xb" value="14"><br><br>
 <button onclick="calculateKeys()">Calculate Keys</button>
 <button onclick="resetValues()">Reset Values</button>
 <h3>Results</h3>
 <p id="result"></p>
 <script>
 function calculateKeys() {
 const p = BigInt(document.getElementById("p").value);
 const g = BigInt(document.getElementById("g").value);
 const Xa = BigInt(document.getElementById("xa").value);
 const Xb = BigInt(document.getElementById("xb").value);
 const Ya = modPow(g, Xa, p);
 const Yb = modPow(g, Xb, p);
const secretAlice = modPow(Yb, Xa, p);
 const secretBob = modPow(Ya, Xb, p);
 const resultDiv = document.getElementById("result");
 resultDiv.innerHTML = `
 Public key of Alice: ${Ya}<br>
 Public key of Bob: ${Yb}<br>
 Secret key of Alice: ${secretAlice}<br>
 Secret key of Bob: ${secretBob}<br>
 ${
 secretAlice === secretBob
 ? "<b>Shared secret key is successfully generated!</b>"
 : "<b>Keys do not match!</b>"
 }
 `;
 }
 function modPow(base, exp, mod) {
 let result = 1n;
 base = base % mod;
 while (exp > 0) {
 if (exp % 2n === 1n) result = (result * base) % mod;
 exp = exp / 2n;
 base = (base * base) % mod;
 }
 return result;
 }
 function resetValues() {
 document.getElementById("p").value = 47;
 document.getElementById("g").value = 71;
 document.getElementById("xa").value = 9;
 document.getElementById("xb").value = 14;
 document.getElementById("result").innerHTML = "";
 }
</script>
 </body>
